{
    "name": "language-board",
    "version": "1.0.0",
    "private": true,
    "main": "dist/index.js",
    "scripts": {
        "// -- dev -- //": "",
        "clean": "node clean.js",
        "prune": "npm prune && npm i --package-lock --ignore-scripts",
        "update": "npm update -D && npm run prune",
        "// -- build -- //": "",
        "build:js": "node build.js",
        "build:ts": "tsc --outDir dist --target es2022 --module commonjs --moduleResolution nodenext --strict --alwaysStrict --removeComments --pretty",
        "build": "npm run build:ts && npm run build:js",
        "prepare": "npm run clean && npm run build",
        "// -- run -- //": "",
        "start:clean": "npm run prepare && electron .",
        "start:build": "npm run build && electron .",
        "start:forge": "npm run prepare && electron-forge start",
        "start": "electron-forge start",
        "// -- deploy -- //": "",
        "package": "npm run prepare && electron-forge package",
        "make": "npm run prepare && electron-forge make"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KatsuteDev/Language-Board.git"
    },
    "author": "Katsute",
    "license": "GPL-2.0",
    "bugs": {
        "url": "https://github.com/KatsuteDev/Language-Board/issues"
    },
    "homepage": "https://github.com/KatsuteDev/Language-Board#readme",
    "dependencies": {
        "@nut-tree/nut-js": "3.1.2",
        "electron-squirrel-startup": "1.0.0",
        "qrcode": "1.5.3",
        "yaml": "2.3.1"
    },
    "devDependencies": {
        "@electron-forge/cli": "6.2.1",
        "@electron-forge/maker-squirrel": "6.2.1",
        "@electron-forge/maker-wix": "6.2.1",
        "@electron-forge/maker-zip": "6.2.1",
        "@types/node": "20.4.2",
        "@types/qrcode": "1.5.1",
        "chromiumly": "2.1.0",
        "electron": "25.3.0",
        "typescript": "5.1.6"
    },
    "overrides": {
        "xml2js": "^0.5.0"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "name": "Language Board",
                "icon": "",
                "appCopyright": "Copyright Â© Katsute 2023",
                "ignore": []
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "Language-Board",
                        "setupIcon": "",
                        "loadingGif": ""
                    }
                },
                {
                    "name": "@electron-forge/maker-zip"
                },
                {
                    "name": "@electron-forge/maker-wix"
                }
            ]
        }
    }
}
