{
    "name": "mobile-board",
    "version": "1.0.0",
    "private": true,
    "main": "",
    "scripts": {
        "// -- dev -- //": "",
        "clean": "node clean.js",
        "prune": "npm prune && npm i --package-lock --ignore-scripts",
        "update": "npm update -D && npm run prune",
        "// -- build -- //": "",
        "build:js": "node build.js",
        "build:ts": "tsc --outDir dist --target es2022 --module es2022 --strict --alwaysStrict --removeComments --pretty",
        "build:tw:app": "tailwindcss -i src/app/style.css -o dist/app/style.css --content 'src/app/*.html' --minify",
        "build:tw:auth": "tailwindcss -i src/auth/style.css -o dist/auth/style.css --content 'src/auth/*.html' --minify",
        "build:tw:web": "tailwindcss -i src/web/style.css -o dist/web/style.css --content 'src/web/*.html' --minify",
        "build:tw": "npm run build:tw:app & npm run build:tw:auth & npm run build:tw:web",
        "build": "npm run build:ts && npm run build:tw && npm run build:js",
        "prepare": "npm run clean && npm run build",
        "// -- run -- //": "",
        "start:clean": "npm run prepare && electron .",
        "start:forge": "npm run prepare && electron-forge start",
        "start": "electron-forge start",
        "// -- deploy -- //": "",
        "package": "npm run prepare && electron-forge package",
        "make": "npm run prepare && electron-forge make"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/KatsuteDev/Mobile-Board.git"
    },
    "author": "Katsute",
    "license": "GPL-2.0",
    "bugs": {
        "url": "https://github.com/KatsuteDev/Mobile-Board/issues"
    },
    "homepage": "https://github.com/KatsuteDev/Mobile-Board#readme",
    "dependencies": {
        "@nut-tree/nut-js": "3.1.2",
        "electron-squirrel-startup": "1.0.0",
        "qrcode": "1.5.3"
    },
    "devDependencies": {
        "@electron-forge/cli": "6.2.1",
        "@electron-forge/maker-squirrel": "6.2.1",
        "@electron-forge/maker-wix": "6.2.1",
        "@electron-forge/maker-zip": "6.2.1",
        "@types/node": "20.4.1",
        "@types/qrcode": "1.5.1",
        "tailwindcss": "3.3.2",
        "typescript": "5.1.6"
    },
    "overrides": {
        "xml2js": "^0.5.0"
    },
    "config": {
        "forge": {
            "packagerConfig": {
                "name": "Mobile Board",
                "icon": "",
                "appCopyright": "Copyright Â© Katsute 2023",
                "ignore": []
            },
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "Mobile-Board",
                        "setupIcon": "",
                        "loadingGif": ""
                    }
                },
                {
                    "name": "@electron-forge/maker-zip"
                },
                {
                    "name": "@electron-forge/maker-wix"
                }
            ]
        }
    }
}
